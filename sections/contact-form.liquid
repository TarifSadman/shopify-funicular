<section class="contact-section py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        {% if section.settings.title != blank %}
          <h2 class="text-center mb-5">{{ section.settings.title }}</h2>
        {% endif %}

        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="alert alert-success" role="alert">
              {{ 'templates.contact.form.post_success' | t }}
            </div>
          {% elsif form.errors %}
            <div class="alert alert-danger" role="alert">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="row mb-3">
            <div class="col-md-6 mb-3 mb-md-0">
              <label for="ContactForm-name" class="visually-hidden">{{ 'templates.contact.form.name' | t }}</label>
              <input
                type="text"
                name="contact[name]"
                id="ContactForm-name"
                class="form-control"
                placeholder="{{ 'templates.contact.form.name' | t }}"
                value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
              >
            </div>
            <div class="col-md-6">
              <label for="ContactForm-email" class="visually-hidden">{{ 'templates.contact.form.email' | t }}</label>
              <input
                type="email"
                name="contact[email]"
                id="ContactForm-email"
                class="form-control"
                placeholder="{{ 'templates.contact.form.email' | t }}"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                required
              >
            </div>
          </div>
          <div class="mb-3">
            <label for="ContactForm-body" class="visually-hidden">{{ 'templates.contact.form.message' | t }}</label>
            <textarea
              name="contact[body]"
              id="ContactForm-body"
              class="form-control"
              rows="10"
              placeholder="{{ 'templates.contact.form.message' | t }}"
            >
              {{- form.body -}}
            </textarea>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg text-uppercase px-5">
              {{ 'templates.contact.form.send' | t }}
            </button>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Form",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Get in Touch"
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
