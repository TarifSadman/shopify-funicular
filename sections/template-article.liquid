<article class="max-w-3xl mx-auto px-4 py-10" itemscope itemtype="http://schema.org/BlogPosting">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <h1 class="text-3xl md:text-5xl font-bold tracking-tight text-gray-900 mb-4" itemprop="headline">
          {{ article.title }}
        </h1>

      {% when 'article_author' %}
        {% if section.settings.enable_author %}
          <small
            class="block text-sm text-gray-500 mb-1"
            itemprop="author"
            itemscope
            itemtype="https://schema.org/Person"
          >
            By <span itemprop="author">{{ article.author }}</span>
          </small>
        {% endif %}

      {% when 'article_published_date' %}
        {% if section.settings.enable_published_date %}
          <time
            datetime="{{ article.published_at | date: format: 'on_date' }}"
            class="block text-sm text-gray-400 mb-6"
            itemprop="datePublished dateCreated"
          >
            {{ article.published_at | date: '%B %d, %Y' }}
          </time>
        {% endif %}

      {% when 'featured_image' %}
        {% if article.image %}
          <div class="my-8" itemprop="image">
            <img
              src="{{ article.image | image_url: width: 1200 }}"
              alt="{{ article.image.alt | default: article.title | escape }}"
              class="w-full rounded-lg object-cover"
              loading="lazy"
            >
          </div>
        {% endif %}

      {% when 'article_content' %}
        <div itemprop="articleBody" class="prose prose-lg max-w-none mt-8">
          {{ article.content }}
        </div>
    {% endcase %}
  {% endfor %}
</article>

{% if blog.comments_enabled? %}
  <div class="my-16 border-t border-gray-200 pt-12" id="comments">
    {% if article.comments_count > 0 %}
      <div class="flex-1 mx-auto max-w-4xl px-4">
        <h2 class="text-2xl font-semibold text-gray-900 mb-8">See what people are saying</h2>

        {% paginate article.comments by 5 %}
          {% for comment in article.comments %}
            <div class="mb-6 rounded-lg border border-gray-200 bg-white p-5 sm:p-6 shadow-sm">
              <div class="flex items-center justify-between mb-2">
                <span class="font-medium text-gray-900">
                  {{ comment.author }}
                </span>

                <span class="text-xs text-gray-400">
                  {{ comment.created_at | date: format: 'default' }}
                </span>
              </div>

              <p class="text-sm leading-relaxed text-gray-700">
                {{ comment.content }}
              </p>
            </div>
          {% endfor %}

          {% if paginate.pages > 1 %}
            <div class="mt-10 flex justify-center">
              {% render 'pagination', pagination: paginate %}
            </div>
          {% endif %}
        {% endpaginate %}
      </div>

    {% else %}
      <p class="text-gray-500 italic text-center mt-8">There are no comments on this article yet.</p>
    {% endif %}
  </div>

  <div id="comment_form" class="mt-12 bg-gray-50 rounded-xl p-6 md:p-10 shadow-sm">
    {% form 'new_comment', article %}
      <div class="flex-1 mx-auto items-center justify-center max-w-4xl">
        <h3 class="text-xl font-semibold text-gray-900 mb-6">Leave a comment</h3>

        {% if form.errors %}
          <div class="mb-6 rounded-lg border border-red-200 bg-red-50 p-5">
            <div class="flex items-start gap-3">
              <div class="mt-0.5 text-red-500">
                {% render 'icon_failed' %}
              </div>

              <div class="flex-1">
                <h4 class="text-sm font-semibold text-red-800 mb-1">Something went wrong</h4>

                <p class="text-sm text-red-700 mb-3">Your comment could not be posted. Please fix the errors below.</p>

                <ul class="list-disc ml-5 space-y-1 text-sm text-red-700">
                  {% for error in form.errors %}
                    <li>
                      {{ form.errors.messages[error] }}
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>

        {% elsif form.posted_successfully? %}
          <div class="mb-6 rounded-lg border border-green-200 bg-green-50 p-5">
            <div class="flex items-start gap-3">
              <div class="mt-0.5 text-green-500">
                {% render 'icon_success' %}
              </div>

              <div>
                <h4 class="text-sm font-semibold text-green-800 mb-1">Comment submitted</h4>

                <p class="text-sm text-green-700">Your comment has been posted successfully.</p>
              </div>
            </div>
          </div>
        {% endif %}

        <div class="px-1 md:flex mb-6">
          <div class="px-3 md:w-1/2">
            <label
              class="block text-xs font-semibold uppercase tracking-wide text-gray-600 mb-2"
              for="comment_author"
            >
              Name
            </label>
            <input
              type="text"
              name="comment[author]"
              id="comment_author"
              class="w-full rounded-md border border-gray-300 py-3 px-4 text-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent"
              placeholder="John Doe"
            >
          </div>

          <div class="px-3 md:w-1/2">
            <label
              class="block text-xs font-semibold uppercase tracking-wide text-gray-600 mb-2"
              for="comment_email"
            >
              Email
            </label>
            <input
              type="email"
              name="comment[email]"
              id="comment_email"
              class="w-full rounded-md border border-gray-300 py-3 px-4 text-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent"
              placeholder="john@doe.com"
            >
          </div>
        </div>

        <div class="px-1 md:flex mb-6">
          <div class="md:w-full px-3">
            <label
              class="block text-xs font-semibold uppercase tracking-wide text-gray-600 mb-2"
              for="comment_content"
            >
              Comment
            </label>
            <textarea
              name="comment[body]"
              id="comment_content"
              required
              class="w-full rounded-md border border-gray-300 resize-none h-28 py-3 px-4 text-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent"
              placeholder="Write your comment here..."
            ></textarea>
          </div>
        </div>

        <div class="px-1 md:flex">
          <div class="md:w-full px-3">
            <input
              type="submit"
              value="Post Comment"
              class="w-full rounded-md cursor-pointer px-6 py-3 text-base font-medium text-white bg-gray-900 hover:bg-gray-700 transition-colors"
            >
          </div>
        </div>
      </div>
    {% endform %}
  </div>
{% endif %}

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": {{ article.title | json }},
    "articleBody": {{ article.content | strip_html | json }}{% if article.excerpt != blank %},
    "description": {{ article.excerpt | strip_html | json }}{% endif %}{% if article.image %},
    "image": [
      {{ article.image | image_url: width: 1200 | prepend: 'https:' | json }}
    ]{% endif %},
    "datePublished": {{ article.published_at | date: "%Y-%m-%dT%H:%M:%SZ" | json }},
    "dateCreated": {{ article.created_at | date: "%Y-%m-%dT%H:%M:%SZ" | json }},
    "author": {
      "@type": "Person",
      "name": {{ article.author | json }}
    },
    "publisher": {
      "@type": "Organization",
      "name": {{ shop.name | json }}
    }
  }
</script>

{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
