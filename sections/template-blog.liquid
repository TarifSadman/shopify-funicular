<div class="py-12 bg-gray-50">
  {% paginate blog.articles by section.settings.number_of_blog_posts %}
    <h1 class="text-center text-4xl font-bold text-gray-900 mb-12">
      {{ blog.title }}
    </h1>

    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for article in blog.articles %}
          <div class="flex justify-center">
            <!-- CARD -->
            <div class="w-full bg-white rounded-xl shadow-sm hover:shadow-md transition overflow-hidden">
              <a href="{{ article.url }}" class="flex gap-6 p-5 items-start">
                <!-- IMAGE -->
                <div class="flex-shrink-0 w-28 h-28 rounded-lg overflow-hidden bg-gray-100">
                  {% if article.image %}
                    <img
                      src="{{ article.image | image_url: width: 300 }}"
                      alt="{{ article.image.alt | default: article.title | escape }}"
                      class="w-full h-full object-cover"
                      loading="lazy"
                      width="300"
                      height="300"
                    >
                  {% endif %}
                </div>

                <!-- CONTENT -->
                <div class="flex flex-col flex-grow">
                  <time
                    datetime="{{ article.published_at | date: '%Y-%m-%d' }}"
                    class="text-xs uppercase tracking-wide text-gray-500 mb-1"
                  >
                    {{ article.published_at | date: '%B %d, %Y' }}
                  </time>

                  <h2 class="text-base font-semibold text-gray-900 leading-snug mb-2">
                    {{ article.title }}
                  </h2>

                  <p class="text-sm text-gray-600 leading-relaxed mb-3 line-clamp-2">
                    {% if article.excerpt != blank %}
                      {{ article.excerpt | strip_html }}
                    {% else %}
                      {{ article.content | strip_html | truncatewords: 18 }}
                    {% endif %}
                  </p>

                  <span class="text-sm font-medium text-blue-600 hover:text-blue-800 inline-flex items-center">
                    Read more â†’
                  </span>
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      {% render 'pagination', pagination: paginate %}
    </div>
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "Blog",
  "settings": [
    {
      "type": "text",
      "id": "blog_read_more",
      "label": "Read more label",
      "default": "Read more"
    },
    {
      "type": "range",
      "id": "number_of_blog_posts",
      "step": 1,
      "min": 1,
      "max": 12,
      "label": "Blog posts per page",
      "default": 6
    }
  ]
}
{% endschema %}
