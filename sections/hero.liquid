<section
  class="
    relative
    {% if section.settings.container_width == 'container' %}
      bg-gray-100 text-gray-900
    {% else %}
      bg-slate-900 text-white
    {% endif %}
  "
>
  <div
    class="
      {% if section.settings.container_width == 'container' %}
        mx-auto max-w-7xl
      {% endif %}
      px-4 py-20 text-center
    "
  >
    <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
      {{ section.settings.heading }}
    </h1>

    <p
      class="
        mt-4
        {% if section.settings.container_width == 'container' %}
          max-w-2xl text-gray-600
        {% else %}
          max-w-none text-gray-300
        {% endif %}
        mx-auto text-lg
      "
    >
      {{ section.settings.subheading }}
    </p>

    {% if section.settings.button_label != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="
          inline-block mt-8 rounded-lg px-8 py-4 font-semibold transition
          {% if section.settings.container_width == 'container' %}
            bg-black text-white hover:bg-gray-900
          {% else %}
            bg-white text-slate-900 hover:bg-gray-200
          {% endif %}
        "
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "select",
      "id": "container_width",
      "label": "Container width",
      "options": [
        { "value": "container", "label": "Container (max-width: 1080px)" },
        { "value": "full", "label": "Full width" }
      ],
      "default": "container"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our latest collection and best sellers."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    { "name": "Hero" }
  ]
}
{% endschema %}
