<section
  class="
    relative
    {% if section.settings.container_width == 'container' %}
      bg-slate-200
    {% else %}
      bg-slate-900
    {% endif %}
  "
>
  <div
    class="
      mx-auto
      {% if section.settings.container_width == 'container' %}
        w-[90vw] bg-white border border-slate-300 rounded-xl
      {% else %}
        w-full
      {% endif %}
      px-4 py-20 text-center
    "
  >
    <h1
      class="
        text-4xl font-bold tracking-tight sm:text-5xl
        {% if section.settings.container_width == 'container' %}
          text-slate-900
        {% else %}
          text-white
        {% endif %}
      "
    >
      {{ section.settings.heading }}
    </h1>

    <p
      class="
        mt-4 mx-auto text-lg
        {% if section.settings.container_width == 'container' %}
          max-w-2xl text-slate-600
        {% else %}
          max-w-none text-slate-300
        {% endif %}
      "
    >
      {{ section.settings.subheading }}
    </p>

    {% if section.settings.button_label != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="
          inline-block mt-8 rounded-lg px-8 py-4 font-semibold transition
          {% if section.settings.container_width == 'container' %}
            bg-black text-white hover:bg-slate-800
          {% else %}
            bg-white text-slate-900 hover:bg-slate-200
          {% endif %}
        "
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "select",
      "id": "container_width",
      "label": "Container width",
      "options": [
        { "value": "container", "label": "Container (max-width: 1080px)" },
        { "value": "full", "label": "Full width" }
      ],
      "default": "container"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our latest collection and best sellers."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [{ "name": "Hero" }]
}
{% endschema %}
