<div class="flex-1 flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Create an account</h1>
    </div>
    <div class="mt-8">
      {% form 'create_customer' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 py-3 px-4 mb-4">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="first_name" class="sr-only">First Name</label>
          <input
            type="text"
            name="customer[first_name]"
            id="first_name"
            autocomplete="given-name"
            class="relative w-full block px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
            placeholder="First Name"
          >
        </div>

        <div class="my-2">
          <label for="last_name" class="sr-only">Last Name</label>
          <input
            type="text"
            name="customer[last_name]"
            id="last_name"
            autocomplete="family-name"
            class="relative w-full block px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
            placeholder="Last Name"
          >
        </div>

        <div class="my-2">
          <label for="email_address" class="sr-only">Email Address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="relative w-full block px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
            placeholder="Email Address"
          >
        </div>

        <div class="my-2">
          <label for="password" class="sr-only">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="relative w-full block px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
            placeholder="Password"
          >
        </div>

        <div class="mt-6">
          <button
            type="submit"
            class="cursor-pointer relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900 transition-colors"
          >
            Create Account
          </button>
        </div>

        <div class="mt-4 text-center text-sm">
          <a href="{{ routes.account_login_url }}" class="underline text-gray-500 hover:text-gray-900">
            Already have an account? Sign in
          </a>
        </div>
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Register Template",
  "settings": []
}
{% endschema %}
