<section id="hero-banner" class="position-relative overflow-hidden" data-aos="fade-in">
  {% if section.settings.background_image != blank %}
    <img
      src="{{ section.settings.background_image | img_url: 'master' }}"
      alt="{{ section.settings.heading }}"
      class="img-fluid w-100 h-100 object-fit-cover position-absolute top-0 start-0"
      style="z-index: -1;"
    >
  {% else %}
    <img
      src="{{ 'banner-image-1.jpg' | asset_url }}"
      alt="Hero Banner"
      class="img-fluid w-100 h-100 object-fit-cover position-absolute top-0 start-0"
      style="z-index: -1;"
    >
  {% endif %}

  <div
    class="container d-flex align-items-center justify-content-{{ section.settings.text_alignment }} h-100 py-5"
    style="min-height: 600px;"
  >
    <div
      class="hero-content p-5 text-{{ section.settings.text_alignment }} text-white"
      style="background-color: rgba(0,0,0, {{ section.settings.overlay_opacity | divided_by: 100.0 }}); max-width: 800px; border-radius: 8px;"
    >
      {% if section.settings.heading != blank %}
        <h1 class="display-3 fw-bold text-uppercase mb-3" data-aos="fade-up" data-aos-delay="100">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="lead mb-4 fs-4" data-aos="fade-up" data-aos-delay="200">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <a
          href="{{ section.settings.button_link }}"
          class="btn btn-light btn-lg text-uppercase px-5 py-3 mt-3"
          data-aos="fade-up"
          data-aos-delay="300"
        >
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 10,
      "default": 30,
      "unit": "%",
      "label": "Overlay Opacity"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "New Summer Collection"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover the latest trends and styles for the season."
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}
