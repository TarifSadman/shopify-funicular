{% if cart.item_count > 0 %}
  <div class="p-6 bg-gray-50 min-h-screen">
    <div class="max-w-6xl flex flex-col my-10 mx-auto">
      <div class="flex items-end justify-between my-6 border-b pb-4">
        <h1 class="text-3xl font-semibold text-gray-800">Your Cart</h1>
        <a
          href="{{ routes.all_products_collection_url }}"
          class="text-sm font-medium text-blue-600 hover:text-blue-800 underline"
        >
          Continue Shopping
        </a>
      </div>
    </div>

    <div class="max-w-6xl flex flex-col my-10 mx-auto bg-white rounded-lg shadow-sm">
      <form action="{{ routes.cart_url }}" method="post">
        <table class="table-auto w-full border-collapse">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Product</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Details</th>
              <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase">Quantity</th>
              <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase">Total</th>
            </tr>
          </thead>

          <tbody class="divide-y divide-gray-100">
            {% for item in cart.items %}
              <tr class="hover:bg-gray-50 transition">
                <!-- Product -->
                <td class="px-6 py-4 align-top">
                  <a href="{{ item.url }}" class="block">
                    {% if item.product.featured_image %}
                      <img
                        src="{{ item.product.featured_image | image_url: width: 200 }}"
                        class="w-24 h-24 object-cover rounded-md border"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'w-24 h-24 rounded-md border' }}
                    {% endif %}
                  </a>
                </td>

                <!-- Details -->
                <td class="px-6 py-4 align-top">
                  <div class="flex flex-col gap-1">
                    <a
                      href="{{ item.url }}"
                      class="text-sm font-medium text-gray-800 hover:text-gray-600"
                    >
                      {{ item.product.title }}
                    </a>
                    <span class="text-xs text-gray-500"> Size: {{ item.variant.title }} </span>
                    <a
                      href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0"
                      class="text-xs font-medium text-red-500 hover:text-red-700"
                    >
                      Remove
                    </a>
                  </div>
                </td>

                <!-- Quantity -->
                <td class="px-6 py-4 text-center align-middle">
                  <input
                    class="w-20 border border-gray-300 rounded-md p-2 text-center focus:ring-1 focus:ring-gray-400 focus:outline-none"
                    type="number"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="1"
                    id="updates-{{ forloop.index }}"
                  >
                </td>

                <!-- Total -->
                <td class="px-6 py-4 text-center align-middle text-sm font-medium text-gray-800">
                  {{ item.line_price | money }}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>

        <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-8 p-6 border-t">
          <div class="w-full">
            <div class="flex flex-col items-start">
              <label for="cart_notes" class="text-sm font-medium text-gray-700 mb-1"> Cart Notes </label>
              <textarea
                name="note"
                id="cart_notes"
                class="w-full md:max-w-lg resize-none border border-gray-300 rounded-md h-24 p-3 focus:outline-none focus:ring-1 focus:ring-gray-400"
              ></textarea>
            </div>
          </div>

          <div class="w-full md:w-80">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'subtotal' %}
                  <h3 class="text-lg font-semibold text-gray-800 mb-4">Subtotal: {{ cart.total_price | money }}</h3>
                {% when 'update_button' %}
                  <div class="my-2">
                    <button
                      name="update"
                      type="submit"
                      class="cursor-pointer w-full p-3 border border-gray-700 text-gray-700 font-medium rounded-md hover:bg-gray-700 hover:text-white transition"
                    >
                      Update
                    </button>
                  </div>
                {% when 'checkout_button' %}
                  <div class="my-2">
                    <button
                      name="checkout"
                      type="submit"
                      class="cursor-pointer w-full p-3 bg-gray-800 text-white font-medium rounded-md hover:bg-gray-900 transition"
                    >
                      Checkout
                    </button>
                  </div>
                {% else %}

              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </form>
    </div>
  </div>
{% else %}
  <div class="max-w-6xl h-60 my-10 flex items-center mx-auto justify-center">
    <div class="text-center bg-white p-10 rounded-lg shadow-sm">
      <h2 class="text-3xl font-semibold text-gray-800 mb-4">Your cart is currently empty</h2>
      <div class="my-4">
        <a
          href="{{ routes.all_products_collection_url }}"
          class="inline-block border border-gray-700 bg-gray-700 text-white px-8 py-3 rounded-md hover:bg-gray-900 transition"
        >
          Continue Shopping
        </a>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Template Cart",
  "blocks": [
    {
      "type": "subtotal",
      "name": "Subtotal",
      "limit": 1
    },
    {
      "type": "update_button",
      "name": "Update Button",
      "limit": 1
    },
    {
      "type": "checkout_button",
      "name": "Checkout Button",
      "limit": 1
    }
  ]
}
{% endschema %}
