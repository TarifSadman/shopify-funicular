<section id="latest-blog" class="py-5">
  <div class="container">
    <div class="section-header d-flex flex-wrap align-items-center justify-content-between">
      <h2 class="section-title">{{ section.settings.heading }}</h2>
      <div class="btn-wrap align-right">
        <a href="{{ blogs[section.settings.blog].url }}" class="d-flex align-items-center">
          {{- section.settings.link_text }}
          <i class="icon icon icon-arrow-io"></i>
        </a>
      </div>
    </div>
    <div class="row d-flex flex-wrap">
      {% assign blog = blogs[section.settings.blog] %}
      {% for article in blog.articles limit: section.settings.post_limit %}
        <div class="col-md-4">
          <article class="post-item">
            <div class="post-image">
              <a href="{{ article.url }}">
                <img
                  src="{{ article.image | img_url: '600x400', crop: 'center' }}"
                  alt="{{ article.title }}"
                  class="post-grid-image img-fluid"
                >
              </a>
            </div>
            <div class="post-content d-flex flex-wrap gap-2 my-3">
              <div class="post-meta text-uppercase fs-6 text-secondary">
                <span class="post-category">Fashion /</span>
                <span class="meta-day"> {{ article.published_at | date: '%b %d, %Y' }}</span>
              </div>
              <h5 class="post-title text-uppercase">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h5>
              <p>{{ article.excerpt_or_content | strip_html | truncatewords: 20 }}</p>
            </div>
          </article>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Blog Posts",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Recent Blog"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Read All Articles"
    },
    {
      "type": "range",
      "id": "post_limit",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Post Limit",
      "default": 3
    }
  ],
  "presets": [
    {
      "name": "Blog Posts"
    }
  ]
}
{% endschema %}
