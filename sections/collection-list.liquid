<section class="categories overflow-hidden">
  <div class="container">
    <div class="open-up" data-aos="zoom-out">
      <div class="row">
        {% for collection in collections %}
          {% if collection.handle != 'frontpage' and collection.handle != 'all' %}
            <div class="col-md-4 mb-4">
              <div class="cat-item image-zoom-effect">
                <div class="image-holder">
                  <a href="{{ collection.url }}">
                    {% if collection.image %}
                      <img
                        src="{{ collection.image | img_url: '600x600', crop: 'center' }}"
                        alt="{{ collection.title }}"
                        class="product-image img-fluid"
                      >
                    {% elsif collection.products.first.featured_image %}
                      <img
                        src="{{ collection.products.first.featured_image | img_url: '600x600', crop: 'center' }}"
                        alt="{{ collection.title }}"
                        class="product-image img-fluid"
                      >
                    {% else %}
                      <img
                        src="{{ 'cat-item1.jpg' | asset_url }}"
                        alt="{{ collection.title }}"
                        class="product-image img-fluid"
                      >
                    {% endif %}
                  </a>
                </div>
                <div class="category-content">
                  <div class="product-button">
                    <a href="{{ collection.url }}" class="btn btn-common text-uppercase">Shop {{ collection.title }}</a>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection List",
  "settings": [],
  "presets": [
    {
      "name": "Collection List"
    }
  ]
}
{% endschema %}
