{% comment %}
  <h1>{{ page.title }}</h1>
  {% form 'contact' %}
    {% if form.posted_successfully? %} Thank you for your contact {% endif %}
    {{ form.errors | default_errors }}
    <label for="ContactFormName">name</label>
    <input type="text" id="ContactFormName" name="contact[name]">
    <label for="ContactFormEmail">email</label>
    <input type="email" id="ContactFormEmail" name="contact[email]">
    <label for="ContactFormPhone">phone</label>
    <input type="tel" id="ContactFormPhone" name="contact[phone]">
    <label for="ContactFormMessage">message</label>
    <textarea rows="10" id="ContactFormMessage" name="contact[body]"></textarea>
    <input type="submit" value="send">
  {% endform %}
{% endcomment %}

<div class="max-w-3xl mx-auto px-4 py-14">
  <!-- Page Title -->
  <h1 class="text-4xl font-bold text-gray-900 mb-3">
    {{ page.title }}
  </h1>

  <p class="text-gray-600 mb-10">
    Have a question or need help? Fill out the form below and we’ll get back to you shortly.
  </p>

  {% form 'contact' %}
    {% if form.posted_successfully? %}
      <div class="mb-6 rounded-lg bg-green-50 p-4 text-green-700 font-medium">
        Thank you for contacting us. We’ll be in touch soon.
      </div>
    {% endif %}

    {{ form.errors | default_errors }}

    <div class="grid grid-cols-1 gap-6">
      <!-- Name -->
      <div>
        <label for="ContactFormName" class="block text-sm font-medium text-gray-700 mb-1"> Name </label>
        <input
          type="text"
          id="ContactFormName"
          name="contact[name]"
          class="w-full rounded-lg border border-gray-300 px-4 py-3 focus:border-gray-900 focus:ring-1 focus:ring-gray-900"
          required
        >
      </div>

      <!-- Email -->
      <div>
        <label for="ContactFormEmail" class="block text-sm font-medium text-gray-700 mb-1"> Email </label>
        <input
          type="email"
          id="ContactFormEmail"
          name="contact[email]"
          class="w-full rounded-lg border border-gray-300 px-4 py-3 focus:border-gray-900 focus:ring-1 focus:ring-gray-900"
          required
        >
      </div>

      <!-- Phone -->
      <div>
        <label for="ContactFormPhone" class="block text-sm font-medium text-gray-700 mb-1"> Phone (optional) </label>
        <input
          type="tel"
          id="ContactFormPhone"
          name="contact[phone]"
          class="w-full rounded-lg border border-gray-300 px-4 py-3 focus:border-gray-900 focus:ring-1 focus:ring-gray-900"
        >
      </div>

      <!-- Message -->
      <div>
        <label for="ContactFormMessage" class="block text-sm font-medium text-gray-700 mb-1"> Message </label>
        <textarea
          rows="6"
          id="ContactFormMessage"
          name="contact[body]"
          class="w-full rounded-lg border border-gray-300 px-4 py-3 focus:border-gray-900 focus:ring-1 focus:ring-gray-900"
          required
        ></textarea>
      </div>

      <!-- Submit Button -->
      <div class="pt-4">
        <button
          type="submit"
          class="inline-flex items-center justify-center rounded-lg bg-gray-900 px-8 py-3 text-white font-semibold hover:bg-gray-800 transition"
        >
          Send Message
        </button>
      </div>
    </div>
  {% endform %}
</div>
