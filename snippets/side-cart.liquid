<div class="side-cart" id="SideCart">
  <div class="side-cart__overlay" onclick="closeSideCart()"></div>

  <div class="side-cart__panel">
    <!-- Persistent Loading Overlay -->
    <div id="CartLoader" class="side-cart__loader">
      <div class="loader"></div>
    </div>

    <div id="SideCartContent" class="h-full"></div>

    <!-- Modern Error Toast -->
    <div id="CartError" class="side-cart__error">
      <div class="side-cart__error-icon">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
      </div>
      <div class="side-cart__error-msg">
        <p id="CartErrorMessage"></p>
      </div>
      <button
        onclick="document.getElementById('CartError').classList.add('hidden')"
        class="side-cart__error-close"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>
</div>
