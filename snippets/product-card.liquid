<div class="w-full px-3 py-6">
  <div class="overflow-hidden rounded-lg border bg-white shadow-sm transition hover:shadow-md">
    <a href="{{ product.url }}" class="block">
      {% if product.featured_image %}
        <div class="h-80 overflow-hidden bg-gray-50">
          <img
            src="{{ product.featured_image | image_url: width: 200 }}"
            alt="{{ product.title }}"
            class="h-full w-full object-contain transition duration-300 hover:scale-105"
          >
        </div>
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-80 bg-gray-100' }}
      {% endif %}
    </a>

    <div class="flex flex-col gap-1 p-4">
      <span class="text-xs uppercase tracking-wide text-gray-400">
        {{ product.vendor }}
      </span>

      <a
        href="{{ product.url }}"
        class="text-sm font-medium uppercase text-gray-800 hover:text-black transition"
      >
        {{ product.title }}
      </a>

      <p class="text-sm font-semibold text-gray-700">
        {{ product.price | money }}
      </p>
    </div>
  </div>
</div>
